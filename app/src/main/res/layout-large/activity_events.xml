<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidapp.beconnect.beconnect.Events">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
                android:id="@+id/llRow1"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="3dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/shape">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/japanese"
                        android:scaleType="centerCrop"
                        android:layout_height="180dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="#fff">

                        <TextView
                            android:text="初級日文體驗"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold"
                            android:textSize="21sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:text="歡迎來到中原大學推廣教育中心！對日文有興趣的你，就從這裡踏出你的第一步吧！趕快來報名還享獨家優惠。"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"/>

                        <Button
                            android:id="@+id/bEventDetail1"
                            android:text="more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/shape">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/woodworking"
                        android:scaleType="centerCrop"
                        android:layout_height="180dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="#fff">

                        <TextView
                            android:text="生活木工小物創作"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold"
                            android:textSize="21sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:text="歡迎來到中原大學推廣教育中心！快來報名學習如何描繪切割線，然後從最簡單的造型開始學習刨削、修飾、打磨。"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"/>

                        <Button
                            android:id="@+id/bEventDetail2"
                            android:text="more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

    </ScrollView>
    <include layout="@layout/snackbar"/>
</RelativeLayout>
